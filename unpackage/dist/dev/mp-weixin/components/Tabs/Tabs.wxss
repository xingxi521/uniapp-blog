.tabs-main {
  width: 100%;
  background-color: #fff;
}
.tabs-main .tabs-box {
  width: 100%;
  height: 45px;
  line-height: 45px;
}
.tabs-main .tabs-box .tabs-scoll {
  width: 100%;
  height: 100%;
  white-space: nowrap;
}
.tabs-main .tabs-box .tabs-scoll .scoll-content {
  width: 100%;
  height: 100%;
  position: relative;
}
.tabs-main .tabs-box .tabs-scoll .scoll-content .item-box {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
}
.tabs-main .tabs-box .tabs-scoll .scoll-content .item-box .tabs-item {
  padding: 0 14px;
  display: inline-block;
  font-size: 15px;
  color: #333;
}
.tabs-main .tabs-box .tabs-scoll .scoll-content .item-box .selected {
  color: #f01414;
  font-weight: 700;
}
.tabs-main .tabs-box .tabs-scoll .scoll-content .underLine {
  height: 2px;
  width: 25px;
  background-color: #f01414;
  border-radius: 3px;
  position: absolute;
  bottom: 0;
  transition: .5s;
}

