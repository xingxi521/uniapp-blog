.list-container {
  margin-bottom: 12px;
}
.list-container .list-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border-radius: 6px;
  background-color: #ffffff;
  box-shadow: 2px 2px 2px 1px rgba(143, 143, 143, 0.1);
  margin: 0 8px;
  padding: 15px 8px;
}
.list-container .list-box .list-box-left {
  margin-right: 5px;
}
.list-container .list-box .list-box-right {
  width: 100%;
}
.list-container .list-box .list-box-right .right-title {
  font-size: 16px;
  font-weight: bold;
  color: #000;
}
.list-container .list-box .list-box-right .right-desc {
  margin-top: 5px;
  font-size: 14px;
  color: #333;
}
.list-container .list-box .list-box-right .right-bottom-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-top: 4px;
}
.list-container .list-box .list-box-right .right-bottom-box .bottom-author {
  font-size: 12px;
  color: #999;
}
.list-container .list-box .list-box-right .right-bottom-box .bottom-hot {
  display: block;
}
.list-container .list-box .list-box-right .right-bottom-box .bottom-hot .hot-icon {
  vertical-align: top;
  width: 20px;
  height: 20px;
}
.list-container .list-box .list-box-right .right-bottom-box .bottom-hot .hot-text {
  margin-left: 5px;
  font-size: 12px;
  color: #f94d2a;
}

